args: {
	tableName: "dynamodb"
	tags: {}
}

services: admin: {
	generated: job: "apply"
	default: true
	consumer: permissions: rules: [{
		apiGroup: "aws.acorn.io"
		verbs: ["dynamodb:*"]
		resources: ["*"]
	}]
}
services: write: {
	generated: job: "apply"
	consumer: permissions: rules: [{
		apiGroup: "aws.acorn.io"
		verbs: [
			"dynamodb:BatchWriteItem",
			"dynamodb:PutItem",
			"dynamodb:UpdateItem",
			"dynamodb:DeleteItem",
			"dynamodb:DescribeTable",
		]
		resources: ["*"]
	}]
}

jobs: apply: {
	build: {
		context: "."
		additionalContexts: {
			common: "../libs/"
			utils:  "../utils/"
		}
	}
	files: "/app/config.json": std.toJSON(args)
	env: {
		CDK_DEFAULT_ACCOUNT: "@{secrets.aws-context.account-id}"
		CDK_DEFAULT_REGION:  "@{secrets.aws-context.aws-region}"
		VPC_ID:              "@{secrets.aws-context.vpc-id}"
		ACORN_ACCOUNT:       "@{acorn.account}"
		ACORN_NAME:          "@{acorn.name}"
		ACORN_PROJECT:       "@{acorn.project}"
		ACORN_EXTERNAL_ID:   "@{acorn.externalID}"
	}
	events: ["create", "update", "delete"]
	permissions: rules: [
		{
			apiGroup: "aws.acorn.io"
			verbs: [
				"cloudformation:DescribeStacks",
				"cloudformation:CreateChangeSet",
				"cloudformation:DescribeStackEvents",
				"cloudformation:DescribeStackResources",
				"cloudformation:DescribeChangeSet",
				"cloudformation:ListChangeSets",
				"cloudformation:ExecuteChangeSet",
				"cloudformation:PreviewStackUpdate",
				"cloudformation:UpdateStack",
				"cloudformation:RollbackStack",
				"cloudformation:GetTemplate",
				"cloudformation:GetTemplateSummary",
				"cloudformation:DeleteStack",
				"dynamodb:*",
			]
			resources: ["*"]
		}, {
			apiGroup: "aws.acorn.io"
			verbs: [
				"ec2:DescribeAvailabilityZones",
				"ec2:DescribeVpcs",
				"ec2:DescribeSubnets",
				"ec2:DescribeRouteTables",
			]
			resources: ["*"]
		}, {
			apiGroup: "api.acorn.io"
			verbs: [
				"create",
			]
			resources: ["events"]
		},
	]
}

secrets: "aws-context": {
	name:     "AWS Context"
	external: "context://aws"
	type:     "opaque"
	data: {
		"account-id": ""
		"vpc-id":     ""
		"aws-region": ""
	}
}
